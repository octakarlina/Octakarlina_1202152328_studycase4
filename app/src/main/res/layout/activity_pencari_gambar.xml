<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.android.octakarlina_1202152328_studycase4.PencariGambarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari Gambar"
        android:textSize="26sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etGambarUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnCariGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Klik untuk mencari gambar"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imgGambar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:scaleType="centerCrop"/>

</LinearLayout>
